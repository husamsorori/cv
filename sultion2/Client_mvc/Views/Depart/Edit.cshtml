@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Depart</h4>
<hr />
<div class="row">
    @if (ViewBag.error != null)
    {
        <div class="bg-danger">
            @ViewBag.error
        </div>
    }

    @if (TempData["sms"] != null)
    {
        <div class="bg-danger">
            @TempData["sms"]
        </div>
    }

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locatin" class="control-label"></label>
                <input asp-for="Locatin" class="form-control" />
                <span asp-validation-for="Locatin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adderss" class="control-label"></label>
                <input asp-for="Adderss" class="form-control" />
                <span asp-validation-for="Adderss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employid" class="control-label"></label>
                <input asp-for="Employid" class="form-control" />
                <span asp-validation-for="Employid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
