        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatin)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adderss)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employid)
                </td>
              
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete1", "Delete1", new { id = item.Id })
               
            </td>
        </tr>
}
    </tbody>
</table>
