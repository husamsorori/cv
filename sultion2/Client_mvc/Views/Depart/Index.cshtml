<table class="table table-striped table-info text-center">
    @if(ViewBag.error != null)
    {
        <div class="bg-danger">
            @ViewBag.error
        </div>
    }

    @if (TempData["sms"] != null)
    {
        <div class="bg-danger">
            @TempData["sms"]
        </div>
    }
    <thead>
        <tr>
        
            <th>
                الاسم 
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adderss)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Employid)
            </th>
         
            <th> <a asp-action="Create" class="btn btn-primary">اضافة قسم </a></th>
        </tr>
